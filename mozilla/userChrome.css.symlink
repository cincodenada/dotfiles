/* hides the native tabs */
.titlebar-spacer, .toolbar-items {
  display: none;
}
#navigator-toolbox {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
/* Make children take up the whole line by default */
/*
#navigator-toolbox > * {
  width: 100%;
}
*/
#nav-bar {
  flex-basis: 1px;
  flex-grow: 1;
}
#PersonalToolbar {
  flex-basis: 100%;
}
.titlebar-buttonbox-container {
  padding-right: 1em;
  background: var(--toolbar-bgcolor);
}
#titlebar {
  display: none;
}
